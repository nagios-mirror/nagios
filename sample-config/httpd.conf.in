ScriptAlias @cgiurl@ "@sbindir@"
<Directory "@sbindir@">
#   SSLRequireSSL
   Options ExecCGI
   AllowOverride AuthConfig
   Order allow,deny
   Allow from all
#   Order deny,allow
#   Deny from all
#   Allow from 127.0.0.1
</Directory>

Alias @htmurl@ "@datadir@"
<Directory "@datadir@">
#   SSLRequireSSL
   Options None
   AllowOverride AuthConfig
   Order allow,deny
   Allow from all
#   Order deny,allow
#   Deny from all
#   Allow from 127.0.0.1
</Directory>

